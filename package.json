{
  "name": "claude-mcp-tools",
  "version": "0.1.0",
  "description": "TypeScript implementation of ClaudeMcpTools with enhanced MCP tools and multi-agent orchestration",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "type": "module",
  "bin": {
    "claude-mcp-tools": "dist/cli/index.js",
    "claude-mcp-server": "dist/server/index.js",
    "claude-mcp-cli": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "preferGlobal": true,
  "scripts": {
    "build": "tsup",
    "postbuild": "chmod +x dist/server/index.js dist/cli/index.js || true",
    "dev": "tsx src/index.ts",
    "dev:cli": "tsx src/cli/index.ts",
    "start": "node dist/server/index.js",
    "start:cli": "node dist/cli/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:drizzle": "tsx test-drizzle.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate --config=./drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=./drizzle.config.ts",
    "db:push": "drizzle-kit push --config=./drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=./drizzle.config.ts",
    "db:drop": "drizzle-kit drop --config=./drizzle.config.ts",
    "install:deps": "pnpm install --frozen-lockfile",
    "install:global": "pnpm build && pnpm link --global && echo '\\nâœ… Global link created. Run: claude-mcp-tools install'",
    "uninstall:global": "claude-mcp-tools uninstall && pnpm unlink --global",
    "setup": "pnpm install:deps && pnpm install:global",
    "link:dev": "pnpm install && pnpm build && pnpm link --global && claude-mcp-tools install"
  },
  "keywords": [
    "mcp",
    "claude",
    "typescript",
    "agent",
    "orchestration",
    "ai",
    "automation",
    "development-tools",
    "cli"
  ],
  "author": "ClaudeMcpTools",
  "license": "MIT",
  "packageManager": "pnpm@10.11.1",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.48",
    "@lancedb/lancedb": "^0.21.1",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@types/express": "^5.0.3",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.2.0",
    "commander": "^14.0.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "express": "^5.1.0",
    "minimatch": "^10.0.3",
    "patchright": "^1.52.5",
    "sharp": "^0.34.3",
    "tree-sitter": "^0.25.0",
    "tree-sitter-bash": "^0.25.0",
    "tree-sitter-c": "^0.24.1",
    "tree-sitter-cli": "^0.25.6",
    "tree-sitter-cpp": "^0.23.4",
    "tree-sitter-css": "^0.23.2",
    "tree-sitter-dart": "^1.0.0",
    "tree-sitter-dockerfile": "0.0.1-security",
    "tree-sitter-go": "^0.23.4",
    "tree-sitter-html": "^0.23.2",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-json": "^0.24.8",
    "tree-sitter-kotlin": "^0.3.8",
    "tree-sitter-lua": "^2.1.3",
    "tree-sitter-php": "^0.23.12",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-ruby": "^0.23.1",
    "tree-sitter-rust": "^0.24.0",
    "tree-sitter-swift": "^0.7.1",
    "tree-sitter-toml": "^0.5.1",
    "tree-sitter-typescript": "^0.23.2",
    "tree-sitter-yaml": "^0.5.0",
    "ts-pattern": "^5.7.1",
    "turndown": "^7.2.0",
    "ulidx": "^2.4.1",
    "user-agents": "^1.1.596",
    "xml2js": "^0.6.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "latest",
    "@types/node": "latest",
    "@types/turndown": "^5.0.5",
    "@types/user-agents": "^1.0.4",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}